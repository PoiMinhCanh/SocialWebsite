@page
@model SocialWebsite.Pages.Posts.CreateModel

@{
    ViewData["Title"] = "Create Post";
}

<h1>Create Post</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="CreatePostDTO.Title" class="control-label"></label>
                <input asp-for="CreatePostDTO.Title" class="form-control" />
                <span asp-validation-for="CreatePostDTO.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CreatePostDTO.Content" class="control-label"></label>
                <input asp-for="CreatePostDTO.Content" class="form-control" />
                <span asp-validation-for="CreatePostDTO.Content" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CreatePostDTO.PublishStatus" checked /> @Html.DisplayNameFor(model => model.CreatePostDTO.PublishStatus)
                </label>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CreatePostDTO.CategoryID" class="control-label"></label>
                <select asp-for="CreatePostDTO.CategoryID" class="form-control" asp-items="ViewBag.PostCategories"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
