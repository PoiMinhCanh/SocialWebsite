@page
@model SocialWebsite.Pages.Register.IndexModel
@{
	ViewData["Title"] = "Register";
}

<h2>Register Account</h2>
<hr />

@{
	foreach (string message in Model.SuccessMessages)
	{
		<div class="alert alert-success mb-2">
			<strong>@message</strong>
		</div>
	}
	foreach (string message in Model.ErrorMessages)
	{
		<div class="alert alert-danger mb-2">
			<strong>@message</strong>
		</div>
	}
}

<form method="post" class="d-flex">
	<div class="card" style="min-width: 400px">
		<div class="card-body">
			<p>
				<label asp-for="CreateUserDTO.Email"></label>
				<input class="form-control" asp-for="CreateUserDTO.Email" />
				<span class="text-danger" asp-validation-for="CreateUserDTO.Email"></span>
			</p>
			<p>
				<label asp-for="CreateUserDTO.Fullname"></label>
				<input class="form-control" asp-for="CreateUserDTO.Fullname" />
				<span class="text-danger" asp-validation-for="CreateUserDTO.Fullname"></span>
			</p>
			<p>
				<label asp-for="CreateUserDTO.Address"></label>
				<input class="form-control" asp-for="CreateUserDTO.Address" />
				<span class="text-danger" asp-validation-for="CreateUserDTO.Address"></span>
			</p>
			<p>
				<label asp-for="CreateUserDTO.Password"></label>
				<input type="password" class="form-control" asp-for="CreateUserDTO.Password" />
				<span class="text-danger" asp-validation-for="CreateUserDTO.Password"></span>
			</p>
			<p>
				<label asp-for="CreateUserDTO.ConfirmPassword"></label>
				<input type="password" class="form-control" asp-for="CreateUserDTO.ConfirmPassword" />
				<span class="text-danger" asp-validation-for="CreateUserDTO.ConfirmPassword"></span>
			</p>
		</div>
		<div class="card-footer">
			<button class="btn btn-primary">Register</button>
		</div>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}